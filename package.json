{
    "name": "cron-decorators",
    "version": "0.1.2",
    "description": "Typescript decorators for Cron jobs.",
    "main": "lib/index.js",
    "repository": "git@github.com:mrbandler/cron-decorators.git",
    "author": "mrbandler <mrbandler@fivefingergames.com>",
    "license": "MIT",
    "readme": "README.md",
    "bugs": {
        "url": "https://github.com/mrbandler/cron-decorators/issues"
    },
    "tags": [
        "typescript",
        "controller",
        "handler",
        "cds",
        "sap"
    ],
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "tsc",
        "build:all": "rimraf ./lib && rimraf ./dist && yarn build && yarn build:test",
        "build:test": "tsc -project ./test/tsconfig.json",
        "start:test": "yarn build:test && node --inspect ./dist/server.js"
    },
    "dependencies": {
        "cron": "^1.7.2",
        "glob": "^7.1.6",
        "moment": "^2.24.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@commitlint/format": "^8.2.0",
        "@commitlint/is-ignored": "^8.2.0",
        "@types/cron": "^1.7.1",
        "@types/express": "^4.17.2",
        "@types/moment": "^2.13.0",
        "@types/node": "^12.12.17",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "conventional-changelog-atom": "^2.0.3",
        "copyfiles": "^2.1.1",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "express": "^4.17.1",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "typedi": "^0.8.0",
        "typescript": "^3.7.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,ts,css,json,md,yml}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    }
}
